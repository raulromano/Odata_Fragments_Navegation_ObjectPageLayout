<mvc:View controllerName="rrm.controller.S1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">

    <Page title="Products">
        <SearchField value="{modelControl>/valueSearchProducts}" search="onSearch"/>
        <List id="listProducts" items="{modelDefault>/Products}" itemPress="onItemPress">
            <items>
                <StandardListItem title="{modelDefault>ID}" description="{modelDefault>Name}" icon="sap-icon://product" info="{modelDefault>Price}" type="Navigation"/>
            </items>
        </List>

        <footer>
            <Bar >
                <contentLeft>
                    <Button text="Create new products" press="onCreateNewProducts"/>
                </contentLeft>
                <contentMiddle>
                    <Button text="Modify products" press="onModifyProducts"/>
                </contentMiddle>
                <contentRight>
                    <Button text="API - Documentation" press="onApiDocumentation"/>
                </contentRight>
            </Bar>
        </footer>

    </Page>


</mvc:View>
